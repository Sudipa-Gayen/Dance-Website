extends base.pug
block scripts 
    script(src="/static/index.js") 
block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css
block content  
      h1 Contact Us
      from(action="/contact",method="post",class="myForm")
          input(type="text",class="myInput",name="name",placeholder="Enter Your Name..")
          br
          input(type="text",class="myInput",name="no",placeholder="Enter Your mobile number..")
          br
          input(type="text",class="myInput",name="email",placeholder="Enter Your Email Id..")
          br
          input(type="text",class="myInput",name="address",placeholder="Enter Your Address..")
          br
          input(type="text",class="myInput",name="concern",placeholder="Enter Your Concern..")
          br
          button(type="submit",class="btn") Submit
